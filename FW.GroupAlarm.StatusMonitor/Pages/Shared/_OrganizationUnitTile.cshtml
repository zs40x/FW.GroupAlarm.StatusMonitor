@using System.Globalization
@model FW.GroupAlarm.StatusMonitor.Model.OrganisationUnitModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
    <div class="card m-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Description</h6>

            <div class="row">
                <div class="col">
                    <h3><span class="badge badge-success">@Model.CountAvailable</span></h3>
                </div>
                <div class="col">
                    <h3><span class="badge badge-warning">@Model.CountInEvent</span></h3>
                </div>
                <div class="col">
                    <h3><span class="badge badge-danger">@Model.CountNotAvailable</span></h3>
                </div>
            </div>

            <div class="card-footer text-muted">
                @foreach (var label in Model.Labels)
                {
                    <span class="badge badge-secondary" style="color: @label.RgbColorCode">@label.Name  (@label.AssigneeCount)</span>
                }
            </div>
        </div>
    </div>
   
